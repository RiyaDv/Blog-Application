<%- include('partials/header', { title: 'Edit Comment', user: user }) %>

<div class="container mt-5 d-flex flex-column min-vh-100">
  <h1 class="text-center mb-4">Edit Comment</h1>
  <div class="d-flex justify-content-center flex-grow-1">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <form action="/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="mb-3">
              <label for="content" class="form-label">Comment Content</label>
              <textarea
                name="content"
                id="content"
                class="form-control"
                rows="4"
                required
              >
<%= comment.content %></textarea
              >
            </div>
            <button type="submit" class="btn btn-primary w-100">
              Update Comment
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
