<%- include('partials/header', { title: 'Home', user: user }) %>

<div style="background-color: #e0e0e0; padding: 2rem">
  <!-- Hero Section -->
  <div
    class="hero-section text-center d-flex align-items-center justify-content-center vh-100"
    style="
      background-image: url('https://cdn.pixabay.com/photo/2016/08/21/12/13/cosmic-1609477_1280.jpg');
      background-size: cover;
      background-position: center;
      position: relative;
      color: #f8f9fa;
      font-family: 'Poppins', sans-serif;
      box-shadow: 15px 15px 15px rgba(0, 0, 0, 0.5);
    "
  >
    <div
      style="
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          rgba(0, 0, 0, 0.5),
          rgba(0, 0, 0, 0.7)
        ); /* Gradient overlay */
        z-index: 1;
      "
    ></div>
    <div class="container text-center" style="position: relative; z-index: 2">
      <h1
        class="display-3 font-weight-bold mb-4"
        style="
          font-size: 4rem;
          text-shadow: 4px 4px 8px rgba(0, 0, 0, 0.7);
          letter-spacing: 1px;
        "
      >
        Welcome to ThinkFlow
      </h1>
      <p
        class="lead mb-4"
        style="
          font-size: 1.5rem;
          text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.7);
          letter-spacing: 0.5px;
        "
      >
        A place to share your thoughts and ideas
      </p>
      <% if (user) { %>
      <p class="mb-4" style="font-size: 1.25rem">
        Hello,
        <span class="username font-weight-bold"><%= user.username %></span>!
        Welcome back!
      </p>
      <a class="btn btn-outline-light btn-lg px-4 py-3" href="/user/profile"
        ><i class="fas fa-user"></i> Go to your profile</a
      >
      <% } else { %>
      <p class="mb-4" style="font-size: 1.25rem">
        Please
        <a class="btn btn-outline-light btn-lg px-4 py-3" href="/auth/login"
          ><i class="fas fa-sign-in-alt"></i> Login</a
        >
        or
        <a class="btn btn-primary btn-lg px-4 py-3" href="/auth/register"
          ><i class="fas fa-user-plus"></i> Register</a
        >
        to continue.
      </p>
      <% } %>
    </div>
  </div>

  <!-- Features Section -->
  <div
    class="container mt-5"
    style="
      font-family: 'Poppins', sans-serif;
      background-color: #121212; /* Dark background for the section */
      color: #e0e0e0; /* Light text color for contrast */
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: var(
        --shadow-large,
        0 6px 12px rgba(0, 0, 0, 0.5)
      ); /* Shadow for depth */
    "
  >
    <h1 class="text-center font-weight-bold mb-5" style="font-size: 2.5rem">
      Application Features
    </h1>
    <div class="row">
      <!-- Card 1 -->
      <div class="col-md-4 mb-4">
        <div
          class="card text-center shadow-lg border-0 rounded"
          style="
            border-radius: 1rem;
            background: linear-gradient(
              135deg,
              #1e1e1e,
              #121212
            ); /* Gradient for modern look */
            border: 1px solid #333; /* Subtle border for emphasis */
            color: #e0e0e0;
            transition: transform 0.3s ease-in-out; /* Smooth hover effect */
          "
          onmouseover="this.style.transform='scale(1.05)'"
          onmouseout="this.style.transform='scale(1)'"
        >
          <div class="card-body">
            <i class="fas fa-lock fa-4x mb-3" style="color: #00bfae"></i>
            <h3 class="card-title mb-3" style="font-size: 1.75rem">
              Authentication
            </h3>
            <p class="card-text" style="font-size: 1.125rem">
              Securely access your account with our robust authentication
              system.
            </p>
          </div>
        </div>
      </div>
      <!-- Card 2 -->
      <div class="col-md-4 mb-4">
        <div
          class="card text-center shadow-lg border-0 rounded"
          style="
            border-radius: 1rem;
            background: linear-gradient(
              135deg,
              #1e1e1e,
              #121212
            ); /* Gradient for modern look */
            border: 1px solid #333; /* Subtle border for emphasis */
            color: #e0e0e0;
            transition: transform 0.3s ease-in-out; /* Smooth hover effect */
          "
          onmouseover="this.style.transform='scale(1.05)'"
          onmouseout="this.style.transform='scale(1)'"
        >
          <div class="card-body">
            <i class="fas fa-user-shield fa-4x mb-3" style="color: #ff4081"></i>
            <h3 class="card-title mb-3" style="font-size: 1.75rem">
              Authorization
            </h3>
            <p class="card-text" style="font-size: 1.125rem">
              Control who has access to different parts of the site.
            </p>
          </div>
        </div>
      </div>
      <!-- Card 3 -->
      <div class="col-md-4 mb-4">
        <div
          class="card text-center shadow-lg border-0 rounded"
          style="
            border-radius: 1rem;
            background: linear-gradient(
              135deg,
              #1e1e1e,
              #121212
            ); /* Gradient for modern look */
            border: 1px solid #333; /* Subtle border for emphasis */
            color: #e0e0e0;
            transition: transform 0.3s ease-in-out; /* Smooth hover effect */
          "
          onmouseover="this.style.transform='scale(1.05)'"
          onmouseout="this.style.transform='scale(1)'"
        >
          <div class="card-body">
            <i class="fas fa-sign-in-alt fa-4x mb-3" style="color: #ffeb3b"></i>
            <h3 class="card-title mb-3" style="font-size: 1.75rem">Login</h3>
            <p class="card-text" style="font-size: 1.125rem">
              Quick and easy login process for returning users.
            </p>
          </div>
        </div>
      </div>
      <!-- Card 4 -->
      <div class="col-md-4 mb-4">
        <div
          class="card text-center shadow-lg border-0 rounded"
          style="
            border-radius: 1rem;
            background: linear-gradient(
              135deg,
              #1e1e1e,
              #121212
            ); /* Gradient for modern look */
            border: 1px solid #333; /* Subtle border for emphasis */
            color: #e0e0e0;
            transition: transform 0.3s ease-in-out; /* Smooth hover effect */
          "
          onmouseover="this.style.transform='scale(1.05)'"
          onmouseout="this.style.transform='scale(1)'"
        >
          <div class="card-body">
            <i
              class="fas fa-sign-out-alt fa-4x mb-3"
              style="color: #ff5252"
            ></i>
            <h3 class="card-title mb-3" style="font-size: 1.75rem">Logout</h3>
            <p class="card-text" style="font-size: 1.125rem">
              Securely log out of your account to protect your data.
            </p>
          </div>
        </div>
      </div>
      <!-- Card 5 -->
      <div class="col-md-4 mb-4">
        <div
          class="card text-center shadow-lg border-0 rounded"
          style="
            border-radius: 1rem;
            background: linear-gradient(
              135deg,
              #1e1e1e,
              #121212
            ); /* Gradient for modern look */
            border: 1px solid #333; /* Subtle border for emphasis */
            color: #e0e0e0;
            transition: transform 0.3s ease-in-out; /* Smooth hover effect */
          "
          onmouseover="this.style.transform='scale(1.05)'"
          onmouseout="this.style.transform='scale(1)'"
        >
          <div class="card-body">
            <i class="fas fa-comments fa-4x mb-3" style="color: #00e5ff"></i>
            <h3 class="card-title mb-3" style="font-size: 1.75rem">Comments</h3>
            <p class="card-text" style="font-size: 1.125rem">
              Engage with the community by leaving comments on posts.
            </p>
          </div>
        </div>
      </div>
      <!-- Card 6 -->
      <div class="col-md-4 mb-4">
        <div
          class="card text-center shadow-lg border-0 rounded"
          style="
            border-radius: 1rem;
            background: linear-gradient(
              135deg,
              #1e1e1e,
              #121212
            ); /* Gradient for modern look */
            border: 1px solid #333; /* Subtle border for emphasis */
            color: #e0e0e0;
            transition: transform 0.3s ease-in-out; /* Smooth hover effect */
          "
          onmouseover="this.style.transform='scale(1.05)'"
          onmouseout="this.style.transform='scale(1)'"
        >
          <div class="card-body">
            <i class="fas fa-upload fa-4x mb-3" style="color: #ff4081"></i>
            <h3 class="card-title mb-3" style="font-size: 1.75rem">
              Multiple File Uploads
            </h3>
            <p class="card-text" style="font-size: 1.125rem">
              Easily upload multiple files with our intuitive interface.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
