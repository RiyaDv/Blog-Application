<%- include('partials/header', { title: 'Register', user: user }) %>

<div class="d-flex align-items-center justify-content-center vh-100">
  <div class="col-lg-4 col-md-6">
    <div
      class="card shadow-lg border-0 rounded"
      style="background: #121212; color: #e0e0e0"
    >
      <div
        class="card-header"
        style="
          background: #1e1e1e;
          color: #ffffff;
          border-bottom: 1px solid #333;
        "
      >
        <h2 class="mb-0 text-center">Register</h2>
      </div>
      <div class="card-body">
        <% if (error) { %>
        <div
          class="alert alert-danger"
          role="alert"
          style="background: #ffebee; color: #d32f2f; border: 1px solid #d32f2f"
        >
          <%= error %>
        </div>
        <% } %>
        <form action="/auth/register" method="POST">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              class="form-control"
              name="username"
              id="username"
              required
              style="
                background: #1e1e1e;
                color: #e0e0e0;
                border: 1px solid #333;
              "
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              name="email"
              id="email"
              required
              style="
                background: #1e1e1e;
                color: #e0e0e0;
                border: 1px solid #333;
              "
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              name="password"
              id="password"
              required
              style="
                background: #1e1e1e;
                color: #e0e0e0;
                border: 1px solid #333;
              "
            />
          </div>
          <button
            type="submit"
            class="btn btn-primary w-100"
            style="background: #ff4081; border-color: #ff4081"
          >
            <i class="fas fa-user-plus"></i> Register
          </button>
        </form>
        <div class="mt-3 text-center">
          <p>
            Already have an account?
            <a href="/auth/login" style="color: #00bfae">Login</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
